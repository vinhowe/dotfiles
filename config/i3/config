# vim:fileencoding=utf-8:ft=conf:foldmethod=marker

# variables {{{
set $mod Mod4
set $lock_cmd env XSECURELOCK_DISCARD_FIRST_KEYPRESS=0 XSECURELOCK_FONT="JetBrains Mono" XSECURELOCK_PASSWORD_PROMPT=time_hex XSECURELOCK_IMAGE_DURATION_SECONDS=65536 XSECURELOCK_AUTH_FOREGROUND_COLOR="#98d1ce" XSECURELOCK_AUTH_BACKGROUND_COLOR="#0c1014" XSECURELOCK_AUTH_SOUNDS=1 XSECURELOCK_BLANK_TIMEOUT=300 XSECURELOCK_NO_COMPOSITE=1 XSECURELOCK_PASS_XF86_CONTROL_KEYS=1 xsecurelock

# use Mouse+$mod to drag floating windows
floating_modifier $mod
# }}}

# font setup {{{
# Font for window titles. Will also be used by the bar unless a different font
# is used in the bar {} block below.
font pango:JetBrains Mono 7
# }}}

# workspace config {{{
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws0 "0"

# force bind workspace 0 to laptop screen, 1 to external screen for consistency's sake
workspace $ws0 output eDP1
workspace $ws1 output HDMI1

# feh when using kop
for_window [class="feh_kop"] floating enable

# sputt
for_window [class="sputt"] floating enable
for_window [class="sputt"] resize set 1000 400
for_window [class="sputt"] move position center
for_window [class="sputt"] sticky enable

# banish messaging apps to screen 6
assign [class="Slack"] $ws6
assign [class="Signal"] $ws6
# }}}

# startup applications {{{

# background {{{
# exec --no-startup-id picom --config ~/.config/picom/picom.conf -b
exec --no-startup-id nm-applet
exec --no-startup-id pasystray -r
exec --no-startup-id redshift-gtk
exec --no-startup-id dropbox start
exec --no-startup-id blueman-applet
exec --no-startup-id jetbrains-toolbox --minimize
exec --no-startup-id gnome-pomodoro --no-default-window
exec --no-startup-id clipit
exec --no-startup-id xss-lock -n /usr/local/libexec/xsecurelock/dimmer -l -- $lock_cmd
# make mouse more sensitive with high dpi screen
exec --no-startup-id xinput --set-prop "Logitech USB Optical Mouse" 311 0.8
# swap caps lock and escape
exec --no-startup-id setxkbmap -option caps:swapescape
# }}}

# foreground {{{
exec --no-startup-id google-chrome
exec --no-startup-id kitty

# start Slack and Signal minimized:
exec --no-startup-id slack -u
exec --no-startup-id signal-desktop --start-in-tray
# }}}

# }}}

# keybinds {{{

# XF86 controls {{{
# change laptop screen brightness
bindsym XF86MonBrightnessUp exec xbacklight -inc 10
bindsym XF86MonBrightnessDown exec xbacklight -dec 10

# change external monitor brightness (ddc is sooo finicky and slow)
bindsym Shift+XF86MonBrightnessUp exec ~/.screenlayout/relative_ddc_brightness.sh 100
bindsym Shift+XF86MonBrightnessDown exec ~/.screenlayout/relative_ddc_brightness.sh -100

# change volume
set $refresh_i3status killall -SIGUSR1 i3status
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +10% && $refresh_i3status
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -10% && $refresh_i3status
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle && $refresh_i3status
bindsym XF86AudioMicMute exec --no-startup-id pactl set-source-mute @DEFAULT_SINK@ toggle && $refresh_i3status

# media controls
bindsym XF86AudioPlay exec playerctl play-pause
bindsym XF86AudioPause exec playerctl play-pause
bindsym XF86AudioNext exec playerctl next
bindsym XF86AudioPrev exec playerctl previous
# }}}

# program shortcuts {{{
# screenshot buttons
bindsym $mod+Print       exec flameshot full
bindsym $mod+Shift+Print exec flameshot gui

# lock with super+g
bindsym $mod+g exec loginctl lock-session

# suspend with super+shift+g
bindsym $mod+Shift+g exec systemctl suspend

# start a terminal
bindsym $mod+Return exec kitty

# sputt
bindsym $mod+t exec --no-startup-id ~/.local/bin/sputt

# start rofi (a program launcher)
bindsym $mod+d exec rofi -show run -dpi 1

# kill Chrome GPU process
bindsym $mod+comma exec ~/.local/bin/kcg

# start emoji picker
bindsym $mod+period exec rofimoji --rofi-args "-dpi 1"
# }}}

# window control {{{

# kill focused window
bindsym $mod+Shift+q kill

# change focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# alternatively, you can use the cursor keys:
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# move focused window
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

# alternatively, you can use the cursor keys:
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# split in horizontal orientation
bindsym $mod+semicolon split h

# split in vertical orientation
bindsym $mod+apostrophe split v

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle

# change container layout (stacked, tabbed, toggle split)
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

# toggle tiling / floating
bindsym $mod+Shift+space floating toggle

# toggle stickiness
bindsym $mod+y sticky toggle

# change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle

# focus the parent container
bindsym $mod+a focus parent

# focus the child container
#bindsym $mod+d focus child

# resize window (you can also use the mouse for this)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym h resize shrink width 10 px or 10 ppt
        bindsym k resize grow height 10 px or 10 ppt
        bindsym j resize shrink height 10 px or 10 ppt
        bindsym l resize grow width 10 px or 10 ppt

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape or $mod+r
        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+r mode "default"
}

bindsym $mod+r mode "resize"
# }}}

# workspace control {{{
# switch to workspace
bindsym $mod+1 workspace $ws1
bindsym $mod+2 workspace $ws2
bindsym $mod+3 workspace $ws3
bindsym $mod+4 workspace $ws4
bindsym $mod+5 workspace $ws5
bindsym $mod+6 workspace $ws6
bindsym $mod+7 workspace $ws7
bindsym $mod+8 workspace $ws8
bindsym $mod+9 workspace $ws9
bindsym $mod+0 workspace $ws0
bindsym $mod+grave workspace $ws0

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace $ws1
bindsym $mod+Shift+2 move container to workspace $ws2
bindsym $mod+Shift+3 move container to workspace $ws3
bindsym $mod+Shift+4 move container to workspace $ws4
bindsym $mod+Shift+5 move container to workspace $ws5
bindsym $mod+Shift+6 move container to workspace $ws6
bindsym $mod+Shift+7 move container to workspace $ws7
bindsym $mod+Shift+8 move container to workspace $ws8
bindsym $mod+Shift+9 move container to workspace $ws9
bindsym $mod+Shift+0 move container to workspace $ws0
bindsym $mod+Shift+grave move container to workspace $ws0

# switch between two most recent workspaces
bindsym Mod1+Tab workspace back_and_forth
# }}}

# output control {{{
# reload screen layout
bindsym $mod+Shift+m exec --no-startup-id ~/.screenlayout/auto_screen.sh w

# move all workspaces (except 1) to to laptop
bindsym $mod+m exec --no-startup-id ~/.screenlayout/auto_screen.sh \
[workspace=$ws0] move workspace to output eDP1; \
[workspace=$ws2] move workspace to output eDP1; \
[workspace=$ws3] move workspace to output eDP1; \
[workspace=$ws4] move workspace to output eDP1; \
[workspace=$ws5] move workspace to output eDP1; \
[workspace=$ws6] move workspace to output eDP1; \
[workspace=$ws7] move workspace to output eDP1; \
[workspace=$ws8] move workspace to output eDP1; \
[workspace=$ws9] move workspace to output eDP1; \
workspace $ws0 \
reload

# move workspaces to different monitors
bindsym $mod+Shift+braceright move workspace to output right
bindsym $mod+Shift+braceleft move workspace to output left
# }}}

# session control {{{
# reload the configuration file
bindsym $mod+Shift+c reload
# restart i3 in-place (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart
# exit i3 (logs you out of your X session)
bindsym $mod+Shift+e exit
# }}}

# }}}

# theme {{{
# colors for minimal, usable theme
set $bg     #020202
set $fg     #9f9f9f
set $hi     #efef8f
set $ac     #fafafa
set $tx     #020202
set $ia     #8f8f8f
set $be     #8faf9f
set $yw     #ccdc90
set $gn     #88b090
set $rd     #e89393

# set some palatable colors   border     background  text
client.focused                $fg        $fg         $tx
client.unfocused              $bg        $bg         $ia
client.focused_inactive       $bg        $bg         $ac
client.urgent                 $rd        $rd         $tx
# }}}

# i3bar config {{{
bar {
        status_command i3status
	i3bar_command i3bar -t

        tray_output eDP1

        colors {
            background          $bg
            statusline          $ac
            separator           $bg
            focused_workspace   $ac        $ac        $tx
            active_workspace    $fg        $fg        $tx
            inactive_workspace  $bg        $bg        $ia
            urgent_workspace    $rd        $rd        $tx
        }
}
# }}}

# (do this last) screen output layout {{{
exec --no-startup-id ~/.screenlayout/auto_screen.sh
# }}}
